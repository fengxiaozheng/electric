<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/has_bottom_body_height"
    android:layout_marginTop="@dimen/body_top"
    tools:context="com.payexpress.electric.mvp.ui.activity.payment.electric.PayResultFragment">

    <LinearLayout
        android:layout_width="@dimen/result_dialog_width"
        android:layout_height="@dimen/result_dialog_height"
        android:orientation="vertical"
        android:layout_marginTop="146dp"
        android:background="@drawable/pay_result_body"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="142dp"
            android:text="购电成功"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="47dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:text="@string/str_042"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
            <TextView
                android:id="@+id/pr_user_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:text="@string/str_043"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
            <TextView
                android:id="@+id/pr_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:text="@string/str_044"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
            <TextView
                android:id="@+id/pr_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:text="@string/str_045"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
            <TextView
                android:id="@+id/pr_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/result_dialog_text"
                android:textColor="@color/result_dialog_text_color"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_complete"
            android:layout_width="486dp"
            android:layout_height="96dp"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_next"
            android:text="@string/complete"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pr_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/pay_result_img"
        android:padding="39dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/img_success"/>
    <View
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/pay_result_point"/>

    <include layout="@layout/bottom_notice"/>
    <include layout="@layout/bottom_time"/>
</FrameLayout>
