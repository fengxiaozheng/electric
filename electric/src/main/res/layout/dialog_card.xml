<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="640dp"
    android:layout_height="480dp"
    android:background="@drawable/pay_record">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="end|center_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/guanbi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        >

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/img_chaka"/>

        <Button
            android:id="@+id/no_card"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/show_card"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:background="@drawable/button_next"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:src="@mipmap/tuoyuan"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_055"
            android:textColor="#333333"
            android:textSize="32sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>