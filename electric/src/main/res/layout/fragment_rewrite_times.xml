<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/has_bottom_body_height"
    android:layout_marginTop="@dimen/body_top"
    tools:context="com.payexpress.electric.mvp.ui.activity.payment.electric.CPRecordFragment">

    <RelativeLayout
        android:layout_width="1814dp"
        android:layout_height="770dp"
        android:layout_marginTop="40dp"
        android:paddingTop="20dp"
        android:background="@drawable/pay_record"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/rd_img"
            android:layout_width="108dp"
            android:layout_height="84dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="41dp"
            android:src="@mipmap/ic_query_record"/>

        <TextView
            android:id="@+id/rd_rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_029"
            android:textSize="36sp"
            android:textColor="#333333"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@id/rd_img"/>

        <TextView
            android:id="@+id/rd_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_047"
            android:textSize="28sp"
            android:textColor="#555555"
            android:layout_marginStart="39dp"
            android:layout_marginTop="28dp"
            android:layout_below="@id/rd_rd"
            android:layout_toEndOf="@id/rd_img"/>

        <TextView
            android:id="@+id/rd_user_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#555555"
            android:layout_marginTop="28dp"
            android:layout_below="@id/rd_rd"
            android:layout_toEndOf="@id/rd_no"/>

        <TextView
            android:id="@+id/rd_ne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称："
            android:textSize="28sp"
            android:textColor="#555555"
            android:layout_marginStart="60dp"
            android:layout_marginTop="28dp"
            android:layout_below="@id/rd_rd"
            android:layout_toEndOf="@id/rd_user_no"/>

        <TextView
            android:id="@+id/rd_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#555555"
            android:layout_marginTop="28dp"
            android:layout_below="@id/rd_rd"
            android:layout_toEndOf="@id/rd_ne"/>

        <Button
            android:id="@+id/btn_to_pay"
            android:visibility="gone"
            android:layout_width="454dp"
            android:layout_height="96dp"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_next"
            android:text="缴费"/>

        <View
            android:id="@+id/rd_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rd_user_name"
            android:background="#ffdddddd"
            />

        <TextView
            android:id="@+id/rd_tm"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rd_view"
            android:text="@string/trade_time"/>

        <TextView
            android:id="@+id/rd_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rd_view"
            android:text="@string/trade_no"/>

        <TextView
            android:id="@+id/rd_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="32sp"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_below="@id/rd_view"
            android:text="充值金额"/>

        <View
            android:id="@+id/rd_view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rd_at"
            android:background="#ffdddddd"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rd_recycler"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_below="@id/rd_view2">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/rd_recycler"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#444444"
                android:text="第"/>
            <TextView
                android:id="@+id/rd_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#444444"
                android:text="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#444444"
                android:text="页/共"/>
            <TextView
                android:id="@+id/rd_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#444444"
                android:text="4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#444444"
                android:text="页"/>
            <Button
                android:id="@+id/rd_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:background="@drawable/btn_record"
                android:text="@string/str_048"/>
            <Button
                android:id="@+id/rd_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:background="@drawable/btn_record"
                android:text="@string/str_049"/>
            <Button
                android:id="@+id/rd_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:background="@drawable/btn_record"
                android:text="@string/str_050"/>
            <Button
                android:id="@+id/rd_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:background="@drawable/btn_record"
                android:text="@string/str_051"/>
            <Button
                android:id="@+id/rd_goback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:background="@drawable/btn_record"
                android:text="返回"/>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/bottom_notice"/>
    <include layout="@layout/bottom_time"/>

</FrameLayout>
